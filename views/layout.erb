<!doctype html>
<html lang=en>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="dns-prefetch" href="http://files.bugsplatcdn.com" />
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700|Lora|Inconsolata:400,700' rel='stylesheet' type='text/css'>
    <%= relative_stylesheet :application %>
    <%= relative_stylesheet :print, 'print' %>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <%= relative_stylesheet(:ie7) %>
    <![endif]-->
    <link rel=alternate type=application/atom+xml href="/index.xml"> 
    <link rel=”shortcut icon” href=”favicon.ico” mce_href=”<%= url_for_asset('/favicon.ico') %>”/>
    <link rel="apple-touch-icon" href="http://files.bugsplatcdn.com/files/ded624de7816989fa2fc/bugsplat-2.png">
    <meta name="google-site-verification" content="4zpO6f2ykzho2VOviksAtUvJJ7_Q6wTWPHUTy7YRHag" />
  </head>
  <body>
    <div class="container container-narrow">
      <div class="masthead">
        <span class="header">
		  <a href="/">Pete Keen</a>
		</span>
        <ul class="nav pull-right" id="search">
          <li>
            <form method="get" action="/search"><input type="search" results="5" autosave="petekeen_search" placeholder="Search" name="q"></input></form>
          </li>
        </ul>
        <ul class="nav-links" id="nav-links">
          <li><a href="/about">About</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/resume">Resume</a></li>
          <li><a href="/mastering-modern-payments">Stripe eBook</a></li>
          <li><a href="/archive">Archive</a></li>
        </ul>
	  </div>
	  <div id="content">
        <%= yield %>
	  </div>
      <footer>
        <ul class="nav-links">
		  <li>&copy; <a href="/">Pete Keen</a></li>
          <li><a href="https://github.com/peterkeen" data-original-title="Github" class="tip"><i class="icon-github"></i></a></li>
          <li><a href="http://www.linkedin.com/in/peterkeen" data-original-title="LinkedIn" class="tip"><i class="icon-linkedin"></i></a></li>
          <li><a href="http://twitter.com/zrail" data-original-title="Twitter" class="tip"><i class="icon-twitter"></i></a></li>
          <li><a href="mailto:pete@petekeen.net" data-original-title="Email" class="tip"><i class="icon-envelope"></i></a></li>
          <li><a href="/index.xml" data-original-title="Subscribe to Feed" class="tip"><i class="icon-rss"></i></a></li>
        </ul>
      </footer>
    </div>
    <%= relative_javascript :application %>
    <% if ENV['RACK_ENV'] == 'production' %>
    <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-5663087-2']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackPageLoadTime']);
    setTimeout("_gaq.push(['_trackEvent', '15_seconds', 'read'])",15000);
  
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
    </script>
    <% end %>
  </body>
</html>
