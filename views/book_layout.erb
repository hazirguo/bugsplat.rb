<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="dns-prefetch" href="http://files.bugsplatcdn.com" />
    <%= relative_stylesheet :application %>
    <%= relative_stylesheet :print, 'print' %>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <%= relative_stylesheet(:ie7) %>
    <![endif]-->
    <link rel=alternate type=application/atom+xml href="/index.xml"> 
    <link rel=”shortcut icon” href=”favicon.ico” mce_href=”<%= url_for_asset('/favicon.ico') %>”/>
    <link rel="apple-touch-icon" href="/img/bugsplat-2.png">
    <link href='https://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
    <meta name="google-site-verification" content="TrfmxNXy4NvuQkn-ijPJ6suggiCgRHNVYEKfUT3oB7I" />
  </head>
  <body>
    <div class="container container-narrow">
	  <div id="content">
        <%= yield %>
	  </div>
    </div>
    <%= relative_javascript :application %>
    <% if ENV['RACK_ENV'] == 'production' %>
    <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-5663087-2']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackPageLoadTime']);
    setTimeout("_gaq.push(['_trackEvent', '15_seconds', 'read'])",15000);
  
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
    </script>
    <% end %>
    <script>
    $(document).ready(function () {
      hljs.tabReplace = '    ';
      hljs.initHighlightingOnLoad();
      $('.bbpTweet .timestamp a[title]').each(function (i, tstamp_node) {
          var date_parts = $(tstamp_node).attr('title').split(/ /);
          var new_date_parts = [date_parts[1], date_parts[2] + ",", date_parts[5], date_parts[3], date_parts[4]];
          var new_date_stamp = new_date_parts.join(' ');
          var tstamp = new Date(new_date_stamp);
          $(tstamp_node).text($.relatizeDate.timeAgoInWords(tstamp));
      });
    });
    </script>

  </body>
</html>
